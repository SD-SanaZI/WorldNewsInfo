<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/news_item_news_img"
        android:layout_width="114dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/news_item_chanel_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/news_item_news_img"
        app:layout_constraintTop_toTopOf="@id/news_item_news_img"
        android:layout_marginStart="16dp"/>
    
    <TextView
        android:id="@+id/news_item_chanel_name"
        android:layout_width="178dp"
        android:layout_height="20dp"
        android:textFontWeight="500"
        android:lineHeight="16dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/news_item_chanel_image"
        app:layout_constraintTop_toTopOf="@id/news_item_chanel_image"
        android:layout_marginStart="8dp"/>
    
    <TextView
        android:id="@+id/news_item_news_short_text"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:lineHeight="20dp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="@id/news_item_chanel_image"
        app:layout_constraintTop_toBottomOf="@id/news_item_chanel_image"
        android:paddingTop="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/colorOutlineVariant"/>

</androidx.constraintlayout.widget.ConstraintLayout>
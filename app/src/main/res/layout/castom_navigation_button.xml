<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/nav_bar_view"
        style="@style/NavBarImageContainer"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/nav_bar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_bar_text"
        style="@style/NavBarText"
        android:text="@string/headlines"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_bar_view" />

    <ImageView
        android:id="@+id/nav_bar_img"
        style="@style/NavBarImage"
        app:layout_constraintBottom_toBottomOf="@id/nav_bar_view"
        app:layout_constraintEnd_toEndOf="@id/nav_bar_view"
        app:layout_constraintStart_toStartOf="@id/nav_bar_view"
        app:layout_constraintTop_toTopOf="@id/nav_bar_view" />



</androidx.constraintlayout.widget.ConstraintLayout>